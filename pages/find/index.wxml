<include src="/commons/navbar/navbar"/>
<view class="display"> 
    <view class="search-box">
      <input class="search-input bgfff" placeholder="请输入主播、商品名称或品牌" placeholder-style='color:#C0C4CC;'></input>
      <image src="../../images/sousuo.png" class="search"></image>
    </view>

