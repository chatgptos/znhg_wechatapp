/* pages/shop-detail/shop-detail.wxss */
@import "../../wxParse/wxParse.wxss";

.banner {
    width: 100%;
    height: 360rpx;
}

.block {
    width: 100%;
    background-color: #fff;
    border-bottom: 1rpx solid #e2e2e2;
    color: #353535;
}

.block:last-child {
    border: 0;
}

.block_1 {
    padding: 24rpx 24rpx 30rpx 24rpx;
}

.title {
    color: #353535;
    font-size: 13pt;
}

.middle {
    margin: 24rpx 0 18rpx 0;
}

.block_2{
    padding: 34rpx 0 34rpx 24rpx;
}

.shop-img {
    width: 120rpx;
    padding: 16rpx 0;
}

.shop-v{
    width: 100%;
    height: 40rpx;
    border-left: 1rpx solid #e2e2e2;
}

.shop-img image {
    width: 40rpx;
    height: 40rpx;
}

.block_3{
    width: 100%;
    height: 72rpx;
    padding: 0 24rpx;
    color: #353535;
    background-color: #fff;
    margin-top: 20rpx;
    border-bottom: 1rpx solid #e2e2e2;
}

.detail{
    padding: 24rpx;
    background-color: #fff;
}








.wrap{
    font-size: 10;
    margin: 0 7rpx;
    margin-top: 30rpx;
}
.wrap .li{
    width: 229rpx;
    height: 336rpx;
    display: inline-block;
    font-size: 14px;
    background: #FFFFFF;
    vertical-align: top;
    margin: 0 8rpx;
    margin-bottom: 8rpx;
}
.wrap .li .img{
    width: 100%;
    height: 220rpx;
    background: #FFFFFF;
}
.wrap .li .img image{
    width: 100%;
    height: 100%;
}
.wrap .li .info{
    font-size: 22rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    line-height: 30rpx;
    padding: 0 8rpx;
    height: 60rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.wrap .li .price{
    display: flex;
    float: right;
    padding: 0 8rpx;
    margin-top: 8rpx;

}
.wrap .li .pri-icon{
    width: 44rpx;
    height: 32rpx;
    /* background: url(../../Img/money-2.png) no-repeat center; */
    background-size: contain;
}
.wrap .li .pri-icon image{
    max-width: 100%;
    max-height: 100%;
}
.wrap .li .price .num{
    color: black;
    font-size: 24rpx;
    margin-left: 10rpx;
}


.title_scan {
    height: 21rpx;
    font-family: Helvetica;
    font-size: 17rpx;
    font-weight: bold;
    line-height: 17rpx;
    color: rgba(48, 49, 51, 1);
    opacity: 1;
    margin: 38rpx 0 10rpx 10vw;
}

.button_scan {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 217rpx;
    height: 90rpx;
    background: linear-gradient(90deg, rgba(255, 94, 98, 1) 0%, rgba(255, 153, 102, 1) 100%);
    box-shadow: 1rpx 1rpx 6rpx rgba(0, 0, 0, 0.16);
    opacity: 1;
    border-radius: 50rpx;
    text-align: center;
    font-size: 18rpx;
    font-family: Helvetica;
    font-weight: bold;
    line-height: 13rpx;
    color: rgba(255, 255, 255, 1);
    opacity: 1;
    text-decoration: none;
    margin: 10rpx auto 0;
}
