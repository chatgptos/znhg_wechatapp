/**index.wxss**/
.container{height:100%;background-color: rgb(248,248,248)}
.top-menu-box{display: inline-block;padding: 6rpx;margin-bottom: 18rpx;background-color: #f0f0f0;border-radius: 32rpx;}
.top-menu-box .item{display: inline-block;text-align: center;padding:14rpx 20rpx;border-radius: 28rpx;font-size: 28rpx;}
.top-menu-box .item.active{background-color: #fff;color:#303133;}
.block-area{padding:20rpx 20px;border-radius: 20rpx;margin: 0 20rpx 30rpx;}
.title-box{
  display: flex;align-items: center;
  font-size: 36rpx;font-weight: bold;
}
.text-number{font-size: 70rpx;font-weight: bold;text-align: center;margin-bottom: 30rpx}
.personal-icons{width: 40rpx;height:auto;margin-right: 16rpx;}

/**app.wxss**/
page{height:100%;}
.container {
  height: 100%;
  /* display: flex; */
  /* flex-direction: column; */
  /* align-items: center; */
  /* justify-content: space-between; */
  padding: 20rpx 0;
  box-sizing: border-box;
}
.block-area{background-color: #fff;}
.btn-group{display: flex;align-items:center;justify-content: space-around;margin: 20rpx 0}
.binggan-btn{display:inline-block;padding: 16rpx 60rpx;border-radius: 50rpx;font-size: 34rpx;line-height: normal;transition: all .3s ease}
.binggan-primary-btn{background-color: #fff;border:1px solid rgb(104,195,178);color:rgb(104,195,178);}
.binggan-confirm-btn{background-color: rgb(104,195,178);color:#fff;}
.binggan-btn::after{border:0}

.binggan-btn-tap{opacity: .72;}
.binggan-primary-btn.binggan-btn-tap{background-color: #f3f3f3;}
.tCenter{text-align: center;}