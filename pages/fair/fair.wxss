/**app.wxss**/
page {
    height: 100%;
}

.container {
    height: 100%;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.block-area {
    background-color: #fff;
}

.btn-group {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin: 20rpx 0
}

.binggan-btn {
    display: inline-block;
    padding: 16rpx 60rpx;
    border-radius: 50rpx;
    font-size: 34rpx;
    line-height: normal;
    transition: all .3s ease
}

.binggan-primary-btn {
    background-color: #fff;
    border: 1px solid rgb(104, 195, 178);
    color: rgb(104, 195, 178);
}

.binggan-confirm-btn {
    background-color: rgb(104, 195, 178);
    color: #fff;
}

.binggan-btn::after {
    border: 0
}

.binggan-btn-tap {
    opacity: .72;
}

.binggan-primary-btn.binggan-btn-tap {
    background-color: #f3f3f3;
}

.tCenter {
    text-align: center;
}






/*弹出框*/

.over{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.6);
    display: block;
}
.bounced{
    width: 90%;
    /*height: 360rpx;*/
    background: #ffffff;
    border-radius: 5%;
    position: fixed;
    left: 5%;
    top: calc(50% - 180rpx);
    padding: 0 100rpx;
    box-sizing: border-box;
    padding-top: 53rpx;
    padding-bottom: 33rpx;
}
.bounced .title{
    height: 38rpx;
    line-height: 38rpx;
    text-align: center;
    color: #303133;

}
.bounced .conmain{
    margin-top: 36rpx;
    line-height: 40rpx;
    min-height: 132rpx;
    font-size: 30rpx;
}

.bounced .conmaincard{
    margin-top: 36rpx;
    line-height: 40rpx;
    min-height: 132rpx;
    font-size: 30rpx;
}
