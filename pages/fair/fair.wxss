/**app.wxss**/
page {
    height: 100%;
}

.container {
    height: 100%;
    padding: 20rpx 0;
    box-sizing: border-box;
}

.block-area {
    background-color: #fff;
}

.btn-group {
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin: 20rpx 0
}

.binggan-btn {
    display: inline-block;
    padding: 16rpx 60rpx;
    border-radius: 50rpx;
    font-size: 34rpx;
    line-height: normal;
    transition: all .3s ease
}

.binggan-primary-btn {
    background-color: #fff;
    border: 1px solid rgb(104, 195, 178);
    color: rgb(104, 195, 178);
}

.binggan-confirm-btn {
    background-color: rgb(104, 195, 178);
    color: #fff;
}

.binggan-btn::after {
    border: 0
}

.binggan-btn-tap {
    opacity: .72;
}

.binggan-primary-btn.binggan-btn-tap {
    background-color: #f3f3f3;
}

.tCenter {
    text-align: center;
}