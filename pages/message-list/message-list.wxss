.main .title{
    font-size: 14px;
    height: 46px;
    background: #F8F8F8;
    width: 100%;
    line-height: 46px;
    padding-left: 20px;
}


.list-item{
    height: 71px;
    border-bottom: 1px solid #EEEEEE;
    padding-left: 10px;
    margin-left: 15px;
    padding-right: 14px;
}
.list-item .name{
    height: 30px;
    line-height: 30px;
    display: flex;
    align-items: center;
    margin-top: 11px;
    justify-content: space-between;
}
.list-item .name .info{
    display: flex;
    align-items: center;
}
.list-item .name .left{
    height: 30px;
    width: 30px;
    border-radius: 50%;
    background: red;
    overflow: hidden;
}
.list-item .name .left image{
    width: 100%;
    height: 100%;
}
.list-item .name .right{
    color: #707070;
    font-size: 14px;
    margin-left: 15px;
    line-height: 16px;
}
.list-item .name .time{
    font-size: 12px;
    color: #909399;
}
.list-item .message{
    font-size: 14px;
    height: 20px;
    line-height: 20px;
    margin-top: 2px;
    padding-left: 46px;
    color: #909399;
}